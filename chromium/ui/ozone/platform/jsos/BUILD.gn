    "//ui/events/platform",
    "//ui/gfx",
    "//ui/gfx/geometry",
    "//ui/gl",
    "//ui/ozone/public",
    "//ui/platform_window",
  ]

  defines = [
    "OZONE_PLATFORM_JSOS",
  ]
}
